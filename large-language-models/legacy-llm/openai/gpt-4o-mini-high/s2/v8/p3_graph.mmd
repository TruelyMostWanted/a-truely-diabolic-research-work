%% Class Definitions
classDef entity   fill:#d1b3ff,stroke:#333;
classDef variable fill:#99e699,stroke:#333;
classDef goal     fill:#99ccff,stroke:#333;
classDef constraint fill:#ff9999,stroke:#333;
classDef relationship fill:#ffe066,stroke:#333;

graph LR
  subgraph Entities
    Project["Project\nID, Name, Project Start, Project End, Description, Budget, Status, Target Audience, Priority"]
    class Project entity

    Team["Team\nID, Name, Team Size, Team Start, Team Status, Location, Team Type"]
    class Team entity

    Employee["Worker / Employee\nID, Name, First Name, Email, Start Date, Status, Availability"]
    class Employee entity

    Feature["Feature\nID, Title, Description, Status, Priority, Estimated Effort"]
    class Feature entity

    Skill["Skill / Competence\nID, Label, Description, Level, Certified, Category"]
    class Skill entity

    Roles["Role(s)\nID, Role Name, Description, Area of Responsibility"]
    class Roles entity

    ProductOwner["Product Owner\nID, Name, Email, Availability"]
    class ProductOwner entity

    ScrumMaster["Scrum Master\nID, Name, Email, Experience"]
    class ScrumMaster entity

    ProductBacklog["Product Backlog\nID, Created On, Last Updated, Number of Entries, Status"]
    class ProductBacklog entity

    Sprint["Sprint\nID, Sprint Number, Start Date, End Date, Status, Achievement of Goal"]
    class Sprint entity

    SprintPlanning["Sprint Planning\nID, Date, Duration (min), Moderation, Outcome Documentation"]
    class SprintPlanning entity

    DailyScrum["Daily Scrum\nID, Date, Time, Duration, Moderation"]
    class DailyScrum entity

    SprintReview["Sprint Review\nID, Date, Duration, Feedback Documentation, Attendees Count"]
    class SprintReview entity

    SprintRetrospective["Sprint Retrospective\nID, Date, Duration, Improvement Actions, Team Satisfaction, Moderation"]
    class SprintRetrospective entity

    SprintBacklog["Sprint Backlog\nID, Number of Tasks, Last Updated, Status, Total Effort"]
    class SprintBacklog entity

    SprintGoal["Sprint Goal\nID, Objective Description, Achievement Status, Benefit"]
    class SprintGoal entity

    Epic["Epic\nID, Title, Description, Priority, Status, Estimated Effort"]
    class Epic entity

    UserStory["User Story\nID, Title, Description, Acceptance Criteria, Priority, Story Points, Status"]
    class UserStory entity

    Task["Task / Sub-Task\nID, Title, Description, Status, Effort, Type"]
    class Task entity

    DevelopmentSnapshot["Development Snapshot\nID, Version Number, Creation Date, Test Status, Deployment Target, Documentation"]
    class DevelopmentSnapshot entity

    Blocker["Blocker / Problem / Bug\nID, Title, Description, Severity, Status, Detected On, Resolved On"]
    class Blocker entity

    Stakeholder["Stakeholder\nID, Name, Organization, Role, Email, Area of Interest, Influence Level, Relevance to Feature"]
    class Stakeholder entity

    Velocity["Velocity\nID, Number of Sprints Used, Avg. Story Points, Max Velocity, Min Velocity, Trend"]
    class Velocity entity

    ReleasePlan["Release Plan\nID, Version, Planned Date, Included Features, Status"]
    class ReleasePlan entity

    Roadmap["Roadmap\nID, Start Date, End Date, Milestones, Objectives, Versions"]
    class Roadmap entity

    ScrumBoard["Scrum Board\nID, Board Type, Columns (ToDo/Done...), Number of Cards, Last Updated"]
    class ScrumBoard entity

    FeatureDocumentation["Feature Documentation\nID, Title, Description, Creation Date, Change Log, Linked Requirements, Author"]
    class FeatureDocumentation entity
  end

