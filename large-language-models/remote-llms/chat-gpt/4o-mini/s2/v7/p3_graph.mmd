    %% Decision Variables
    class D1, D2, D3, D4, D5, D6, D7, D8, D9, D10, D11 <<variable>> {
      D1: SprintDuration (7–30)
      D2: TeamSize (3–12)
      D3: BudgetAllocation (10000–1e6)
