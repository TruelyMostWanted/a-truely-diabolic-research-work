  \item Incidence masks from relationships, e.g., $\mathbf{1}\{us \in \text{SBStories}(sbl)\}$, $\mathbf{1}\{bl \in \text{Blocks}(tsk)\}$, etc.
\end{itemize}

\section{3. Goals}
We scalarize multiple goals via a single composite objective
\[
\min Z \;\;=\;\; \sum_{g \in \mathcal{G}} \omega_g \,\phi_g,
\]
where each goal $g$ contributes $\phi_g$ with weight $\omega_g$. For a \emph{maximize\_}$\cdot$ goal we negate the measure (so it becomes minimizing the negative utility). When \texttt{IsSum}=\texttt{True}, we sum over the corresponding entity set; when \texttt{IsSum}=\texttt{False}, we use the average over that set (or the single instance if unique).

\begin{itemize}[leftmargin=2em]
  \item \textbf{[G0] minimize\_total\_budget} (\emph{min}, weight $1.0$): logical: reduce overall spend. \\
  $\displaystyle \phi_{G0} = \sum_{p \in \mathcal{P}} B_p.$
  \item \textbf{[G1] maximize\_worker\_availability} (\emph{max}, weight $1.0$): logical: increase available capacity. \\
  $\displaystyle \phi_{G1} = - \sum_{w \in \mathcal{W}} A_w.$
  \item \textbf{[G2] maximize\_story\_throughput} (\emph{max}, weight $1.0$): logical: maximize delivered story points. \\
  $\displaystyle \phi_{G2} = - \sum_{us \in \mathcal{US}} \text{SP}_{us}.$
  \item \textbf{[G3] minimize\_open\_blocker\_severity} (\emph{min}, weight $1.0$): logical: lower active blocker burden. \\
  $\displaystyle \phi_{G3} = \sum_{bl \in \mathcal{BL}} \text{Sev}_{bl} \cdot \mathbf{1}\{\text{Resolved}_{bl}=0\}.$
  \item \textbf{[G4] maximize\_feature\_priority} (\emph{max}, weight $1.2$): logical: favor high-priority features. \\
  $\displaystyle \phi_{G4} = - \sum_{f \in \mathcal{F}} \text{Prio}_f.$
  \item \textbf{[G5] minimize\_total\_task\_effort} (\emph{min}, weight $1.0$): logical: reduce total effort. \\
  $\displaystyle \phi_{G5} = \sum_{tsk \in \mathcal{TSK}} \text{Effort}_{tsk}.$
  \item \textbf{[G6] maximize\_team\_velocity} (\emph{max}, weight $1.3$): logical: increase average velocity. \\
  $\displaystyle \phi_{G6} = - \sum_{vel \in \mathcal{VEL}} \text{VelAvg}_{vel}.$
  \item \textbf{[G7] maximize\_stakeholder\_relevance} (\emph{max}, weight $0.8$): logical: increase value for most relevant stakeholders. \\
  $\displaystyle \phi_{G7} = - \sum_{sh \in \mathcal{SH}} \text{Rel}_{sh}.$
  \item \textbf{[G8] maximize\_sprint\_goal\_achievement} (\emph{max}, weight $1.5$): logical: maximize achieved sprint goals. \\
  $\displaystyle \phi_{G8} = - \sum_{sp \in \mathcal{SP}} \text{AchGoal}_{sp}.$
  \item \textbf{[G9] minimize\_meeting\_time} (\emph{min}, weight $0.6$): logical: reduce sprint planning duration. \\
  $\displaystyle \phi_{G9} = \sum_{spp \in \mathcal{SPP}} \text{PlanDur}_{spp}.$
  \item \textbf{[G10] maximize\_review\_attendance} (\emph{max}, weight $0.7$): logical: increase review attendees. \\
  $\displaystyle \phi_{G10} = - \sum_{sr \in \mathcal{SR}} \text{Att}_{sr}.$
  \item \textbf{[G11] minimize\_wip\_on\_board} (\emph{min}, weight $1.1$): logical: limit cards on boards. \\
  $\displaystyle \phi_{G11} = \sum_{scb \in \mathcal{SCB}} WIP_{scb}.$
  \item \textbf{[G12] maximize\_backlog\_freshness} (\emph{max}, weight $0.5$, \texttt{IsSum}=\texttt{False}): logical: keep PB updated. \\
  $\displaystyle \phi_{G12} = - \frac{1}{|\mathcal{PB}|}\sum_{pb \in \mathcal{PB}} \text{FreshPB}_{pb}.$
\end{itemize}

\section{4. Conditions}
Each condition encodes a logical rule and a constraint. We reference decision variables from Section~5 and relationship sets from Section~1.

\begin{itemize}[leftmargin=2em]
  \item \textbf{[C0] must\_match\_active\_projects} (\texttt{Must-Match}): only active projects considered. \\
  Logical: $p \in \mathcal{P} \Rightarrow \text{ActiveProj}_p=1$. \quad
  Math: $\sum_{us \in \mathcal{US}} \sum_{sp \in \mathcal{SP}} x^{\text{US-SP}}_{us,sp,p} \le M \cdot \text{ActiveProj}_p,\;\forall p$ (big-$M$ gating by project activity).
  \item \textbf{[C1] cannot\_match\_blocked\_tasks} (\texttt{Cannot-Match}): exclude blocked tasks unless resolved. \\
  $\displaystyle x^{\text{TSK-W}}_{tsk,w} \le \min_{bl \in \text{Blocks}(tsk)} z^{\text{BL-Resolved}}_{bl},\;\forall tsk,w,$
  where $z^{\text{BL-Resolved}}_{bl} \in \{0,1\}$ indicates resolution; if any blocker unresolved, assignment is 0.
  \item \textbf{[C2] must\_match\_available\_workers} (\texttt{Must-Match}): assign only to available workers. \\
  $\displaystyle \sum_{tsk \in \mathcal{TSK}} \text{Effort}_{tsk}\,x^{\text{TSK-W}}_{tsk,w} \le A_w,\;\forall w.$
  \item \textbf{[C3] must\_match\_certified\_skills} (\texttt{Must-Match}): when a task requires certified skill $s$, assign to worker with $\text{Certified}_s=1$. \\
  $\displaystyle x^{\text{TSK-W}}_{tsk,w} \le \sum_{s \in \text{Skills}(w)} \text{Certified}_s \cdot \mathbf{1}\{s \text{ required by } tsk\},\;\forall tsk,w.$
  \item \textbf{[C4] must\_match\_product\_owner\_availability} (\texttt{Must-Match}): Sprint pulling from $pb$ needs available $po$ with $\text{POManages}(po)=pb$. \\
  $\displaystyle \sum_{us \in \text{SBStories}(sbl)} x^{\text{US-SP}}_{us,sp} \le M \cdot \text{POAvail}_{po},\;\forall sbl:\text{SprintOf}(sbl)=sp,\, po:\text{POManages}(po)=pb.$
  \item \textbf{[C5] must\_match\_sprint\_has\_goal} (\texttt{Must-Match}): each sprint must have a goal. \\
  $\displaystyle \text{AchGoal}_{sp} \le \mathbf{1}\{\text{GoalOf}(sp)\ \text{exists}\},\;\forall sp.$
  \item \textbf{[C6] cannot\_match\_low\_priority\_features} (\texttt{Cannot-Match}): features with $\text{Prio}_f<\underline{\text{Prio}}$ cannot be planned. \\
  $\displaystyle x^{\text{F-REP}}_{f,rep} \le \mathbf{1}\{\text{Prio}_f \ge \underline{\text{Prio}}\},\;\forall f,rep.$
  \item \textbf{[C7] must\_match\_active\_backlog} (\texttt{Must-Match}): pull only from active product backlogs. \\
  $\displaystyle \sum_{f \in \text{Features}(pb)} x^{\text{F-REP}}_{f,rep} \le M \cdot \mathbf{1}\{\text{Status}_{pb}=\text{active}\},\;\forall pb,rep.$
  \item \textbf{[C8] must\_match\_sprint\_backlog\_effort\_limit} (\texttt{Must-Match}): total effort in a sprint within capacity. \\
  $\displaystyle \sum_{us \in \mathcal{US}} \sum_{tsk \in \text{Tasks}(us)} \text{Effort}_{tsk}\, x^{\text{US-SP}}_{us,sp} \le \overline{SBL}_{sp},\;\forall sp.$
  \item \textbf{[C9] cannot\_match\_severe\_blockers} (\texttt{Cannot-Match}): items with high severity blocked until severity $\le \overline{\text{Sev}}$. \\
  $\displaystyle x^{\text{US-SP}}_{us,sp} \le \prod_{tsk \in \text{Tasks}(us)} \prod_{bl \in \text{Blocks}(tsk)} \mathbf{1}\{\text{Sev}_{bl} \le \overline{\text{Sev}} \ \lor\ z^{\text{BL-Resolved}}_{bl}=1\}.$
  \item \textbf{[C10] must\_match\_review\_feedback\_documented} (\texttt{Must-Match}): reviews must have feedback documented. \\
  $\displaystyle \mathbf{1}\{\text{feedback\_documentation}_{sr}\ \text{present}\}=1,\;\forall sr.$
  \item \textbf{[C11] must\_match\_retro\_actions\_logged} (\texttt{Must-Match}): retros capture improvements. \\
  $\displaystyle \mathbf{1}\{\text{improvement\_actions}_{sre}\ \text{present}\}=1,\;\forall sre.$
  \item \textbf{[C12] must\_match\_team\_size\_bounds} (\texttt{Must-Match}): team size within bounds. \\
  $\displaystyle \underline{N} \le N^{\text{Team}}_{t} \le \overline{N},\;\forall t.$
\end{itemize}

\section{5. DecisionVariables}
Notation below expands the CSV-defined variables into indexed decision variables over the relevant sets (domains as in the CSV).

\begin{itemize}[leftmargin=2em]
  \item \textbf{[DV0] assign\_user\_story\_to\_sprint} ($x^{\text{US-SP}}_{us,sp} \in \{0,1\}$): assign story $us$ to sprint $sp$.
  \item \textbf{[DV1] select\_feature\_for\_release} ($x^{\text{F-REP}}_{f,rep} \in \{0,1\}$): include feature $f$ in release plan $rep$.
  \item \textbf{[DV2] allocate\_task\_to\_worker} ($x^{\text{TSK-W}}_{tsk,w} \in \{0,1\}$): assign task $tsk$ to worker $w$.
  \item \textbf{[DV3] set\_sprint\_number} ($n^{\text{SP}}_{sp} \in \{1,\dots,999\}$): sprint numbering.
  \item \textbf{[DV4] set\_story\_points\_for\_user\_story} ($y^{\text{SPts}}_{us} \in \{0,\dots,100\}$): calibrated story points (can refine $\text{SP}_{us}$).
  \item \textbf{[DV5] set\_task\_effort\_hours} ($y^{\text{Eff}}_{tsk} \in \{0,\dots,100\}$): estimated effort (can refine $\text{Effort}_{tsk}$).
  \item \textbf{[DV6] choose\_board\_column} ($c^{\text{Board}}_{tsk,scb} \in \{0,1,2\}$): column index for task on board $scb$.
  \item \textbf{[DV7] schedule\_sprint\_start\_offset} ($d^{\text{Start}}_{sp} \in \{0,\dots,30\}$): day offset from project start.
  \item \textbf{[DV8] decide\_blocker\_resolution\_flag} ($z^{\text{BL-Resolved}}_{bl} \in \{0,1\}$): whether blocker $bl$ is treated as resolved for planning.
  \item \textbf{[DV9] set\_team\_size} ($N^{\text{Team}}_{t} \in \{1,\dots,20\}$): effective team size for execution horizon.
  \item \textbf{[DV10] set\_velocity\_target\_story\_points} ($v^{\text{Target}}_{t} \in \{0,\dots,200\}$): target team velocity.
  \item \textbf{[DV11] plan\_review\_attendees\_target} ($a^{\text{Target}}_{sr} \in \{0,\dots,100\}$): target attendees for review $sr$.
  \item \textbf{[DV12] pick\_roadmap\_milestone\_sequence} ($m^{\text{Seq}}_{rm} \in \{1,\dots,50\}$): ordering index for roadmap $rm$ milestones.
\end{itemize}

\paragraph{Linking and consistency constraints (cross-cutting).}
\begin{itemize}[leftmargin=2em]
  \item Story-to-sprint implies its tasks are executable: $x^{\text{US-SP}}_{us,sp} \le \frac{1}{|\text{Tasks}(us)|}\sum_{tsk \in \text{Tasks}(us)} \sum_{w \in \mathcal{W}} x^{\text{TSK-W}}_{tsk,w},\ \forall us,sp.$
  \item Sprint capacity based on team availability: $\overline{SBL}_{sp} \le \sum_{t \in \mathcal{T}} N^{\text{Team}}_{t}\cdot \bar{a}\cdot H$ (with nominal availability $\bar{a}$ and hours $H$).
  \item Velocity target consistency: $\sum_{us} \text{SP}_{us}\, x^{\text{US-SP}}_{us,sp} \le \sum_{t} v^{\text{Target}}_{t},\ \forall sp.$
\end{itemize}

