\section{4. Conditions}
Each condition $Ck$ is modeled as a constraint. (Logical descriptions reflect the CSV names; mathematical forms use the decision variables and relationship incidence.)

\begin{itemize}[leftmargin=2em,itemsep=1.0em]
  \item \textbf{C0 minimize\_unscheduled\_tasks:} selected tasks must belong to a selected user story.\\
  $\forall \tau\in\mathcal{TSK}:\quad x^{TSK}_{\tau} \;\le\; \sum_{u\in\mathcal{US}} R^{US\text{-}TSK}_{u,\tau}\, x^{US}_{u}$
  \item \textbf{C1 minimize\_unassigned\_worker\_roles:} if a worker is assigned to any team, at least one role must be taken.\\
  $\forall w\in\mathcal{W}:\quad \sum_{r\in\mathcal{R}} x^{WR}_{w,r} \;\ge\; \min\!\left\{1,\; \sum_{t\in\mathcal{T}} x^{WT}_{w,t}\right\}$
  \item \textbf{C2 minimize\_unplanned\_epics:} planning a story implies its epic is represented in a product backlog.\\
  $\forall u\in\mathcal{US}:\quad x^{US}_{u} \;\le\; \sum_{pb\in\mathcal{PB}} R^{PB\text{-}US}_{pb,u}$
  \item \textbf{C3 minimize\_story\_without\_acceptance\_criteria:} only stories with acceptance criteria may be selected.\\
  $\forall u\in\mathcal{US}:\quad x^{US}_{u} \;\le\; \mathbf{1}\{\texttt{acceptance\_criteria}(u)\neq\emptyset\}$
  \item \textbf{C4 minimize\_sprint\_without\_goal:} a sprint marked achieved must reference a sprint goal.\\
  $\forall sp\in\mathcal{SP}:\quad x^{SG}_{sp} \;\le\; \sum_{sg\in\mathcal{SG}} R^{SP\text{-}SG}_{sp,sg}$
  \item \textbf{C5 minimize\_exceeded\_sprint\_duration:} (feasibility check) end date after start date (data validity).\\
  $\forall sp\in\mathcal{SP}:\quad \texttt{end\_date}(sp)\;-\;\texttt{start\_date}(sp)\;\ge\;0$
  \item \textbf{C6 minimize\_overallocated\_team\_size:} assigned workers cannot exceed team capacity $Cap_t$.\\
  $\forall t\in\mathcal{T}:\quad \sum_{w\in\mathcal{W}} x^{WT}_{w,t} \;\le\; Cap_t$
  \item \textbf{C7 minimize\_missing\_feature\_docs:} if a feature is selected for release, it must have documentation.\\
  $\forall f\in\mathcal{F}:\quad x^{FR}_{f} \;\le\; \sum_{fd\in\mathcal{FED}} R^{FED\text{-}F}_{fd,f}$
  \item \textbf{C8 minimize\_stale\_backlog:} only user stories in a recently updated backlog may be planned.\\
  $\forall u\in\mathcal{US}:\quad x^{US}_{u} \;\le\; \sum_{pb\in\mathcal{PB}} R^{PB\text{-}US}_{pb,u}\cdot \mathbf{1}\{\texttt{last\_updated}(pb)\ge \Delta\}$
  \item \textbf{C9 minimize\_unmoderated\_events:} (policy) retrospectives must be moderated if sprint goal is achieved.\\
  $\forall sp\in\mathcal{SP}:\quad x^{SG}_{sp} \;\le\; \mathbf{1}\{\exists\, sre\in\mathcal{SRE}\ \text{with}\ \texttt{moderation}(sre)=\text{true}\}$
  \item \textbf{C10 minimize\_unestimated\_stories:} only estimated stories may be planned.\\
  $\forall u\in\mathcal{US}:\quad x^{US}_{u} \;\le\; \mathbf{1}\{\text{sp}_{u} > 0\}$
  \item \textbf{C11 minimize\_untracked\_velocity:} velocity targets require historical basis $minSprints$.\\
  $\sum_{u\in\mathcal{US}} \text{sp}_{u}\, x^{US}_{u} \;\le\; \left(\sum_{v\in\mathcal{VEL}} \mathbf{1}\{\texttt{number\_of\_sprints\_used}(v)\ge minSprints\}\right)\cdot V_{\max}$
\end{itemize}

