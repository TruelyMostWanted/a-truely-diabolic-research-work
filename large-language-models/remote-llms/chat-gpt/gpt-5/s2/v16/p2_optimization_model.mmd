\section{5. DecisionVariables}
Let the following decision variables be defined, reflecting \textit{DecisionVariables.csv}. Domains and bounds follow the CSV fields.

\begin{itemize}[leftmargin=2em]
  \item \textbf{DV0 \texttt{select\_user\_story}}: $x_{us}\in\{0,1\}$ for each $us\in \mathcal{US}$ (select story into sprint).
  \item \textbf{DV1 \texttt{assign\_worker\_to\_task}}: $a_{w,tsk}\in\{0,1\}$ for each $(w,tsk)\in \mathcal{W}\times \mathcal{TSK}^{\text{open}}$ (assignment).
  \item \textbf{DV2 \texttt{choose\_feature\_for\_release}}: $y_{f}\in\{0,1\}$ for each $f\in \mathcal{F}$ (include in next release).
  \item \textbf{DV3 \texttt{set\_sprint\_length\_days}}: $L^{\text{days}}\in \mathbb{Z}$, $7\le L^{\text{days}}\le 30$ (chosen sprint length).
  \item \textbf{DV4 \texttt{allocate\_budget\_to\_project}}: $b^{\text{alloc}}_{p}\in \mathbb{R}_{\ge 0}$ for $p\in \mathcal{P}$, $0\le b^{\text{alloc}}_{p}\le 10^6$.
  \item \textbf{DV5 \texttt{set\_team\_size}}: $N_{sp}\in \mathbb{Z}$ for $sp\in \mathcal{SP}$, $3\le N_{sp}\le 15$.
  \item \textbf{DV6 \texttt{set\_max\_tasks\_per\_worker}}: $K^{\max}\in \mathbb{Z}$, $1\le K^{\max}\le 10$ (global cap).
  \item \textbf{DV7 \texttt{assign\_scrum\_master\_to\_team}}: $z_{sm,t}\in\{0,1\}$ for $(sm,t)\in \mathcal{SM}\times \mathcal{T}$ with $\sum_{sm} z_{sm,t}=1$ if team $t$ is staffed.
  \item \textbf{DV8 \texttt{allow\_overtime}}: $o\in\{0,1\}$ (overtime allowance flag; may scale effective availability).
  \item \textbf{DV9 \texttt{set\_review\_attendees\_target}}: $R^{\text{target}}\in \mathbb{Z}_{\ge 0}$, $0\le R^{\text{target}}\le 100$.
  \item \textbf{DV10 \texttt{set\_velocity\_target}}: $V^{\text{target}}\in \mathbb{Z}_{\ge 0}$, $0\le V^{\text{target}}\le 200$.
  \item \textbf{DV11 \texttt{prioritize\_epic\_level}}: $p^{\text{bucket}}_{e}\in \{1,2,3,4,5\}$ for $e\in \mathcal{E}^{\text{open}}$.
\end{itemize}

\bigskip
\noindent\textbf{Linking and capacity constraints (illustrative):}
\begin{itemize}[leftmargin=2em]
  \item Capacity with availability and overtime:
  \[
    \sum_{tsk} a_{w,tsk}\, effort_{tsk} \;\le\; \big(1+\alpha o\big)\, avail_w
    \quad \forall w\in \mathcal{W}^{\text{active}},
  \]
  with overtime uplift $\alpha\ge 0$.
  \item Story--task coverage:
  \[
    \sum_{tsk\in \mathcal{TSK}(us)} \sum_{w} a_{w,tsk} \;\ge\; m\; x_{us}, \quad
    \sum_{tsk\in \mathcal{TSK}(us)} \sum_{w} a_{w,tsk} \;\le\; M\; x_{us},
  \]
  for constants $0<m\le M$.
\end{itemize}

