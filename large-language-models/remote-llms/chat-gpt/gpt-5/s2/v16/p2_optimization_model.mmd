\section{3. Goals}
We aggregate multiple goals using a weighted-sum scalarization. For each goal $g$, let weight $\gamma_g>0$ (from \texttt{Weight}) and sign $\sigma_g\in\{+1,-1\}$ where $\sigma_g=+1$ for \texttt{GoalType}=\texttt{max} and $\sigma_g=-1$ for \texttt{GoalType}=\texttt{min}. The master objective is:
\[
\max \; \sum_{g \in \mathcal{G}} \sigma_g \, \gamma_g \, F_g(\text{variables; data}),
\]
where $F_g$ are the goal-specific expressions below. (Goals marked \texttt{IsSum=True} sum over their relevant sets.)

\begin{itemize}[leftmargin=2em]

  \item \textbf{G0 \texttt{maximize\_velocity}} (\textit{IsSum=True}, \textit{GoalType=max}, Entity=\textbf{Velocity}):
  \[
    F_{G0} \;=\; \sum_{v \in \mathcal{VEL}} v^{\max}_v
    \qquad\text{(maximize recorded max velocity across teams; CriteriaType=1)}
  \]

  \item \textbf{G1 \texttt{minimize\_backlog\_size}} (\textit{IsSum=False}, \textit{GoalType=min}, Entity=\textbf{ProductBacklog}):
  \[
    F_{G1} \;=\; \sum_{pb \in \mathcal{PB}^{\text{active}}} n^{\text{entries}}_{pb}
    \qquad\text{(minimize total entries of active PBs; CriteriaType=2)}
  \]

  \item \textbf{G2 \texttt{minimize\_total\_task\_effort}} (\textit{IsSum=True}, \textit{GoalType=min}, Entity=\textbf{Task}):
  \[
    F_{G2} \;=\; \sum_{us \in \mathcal{US}} \sum_{tsk \in \mathcal{TSK}(us)} \; \sum_{w \in \mathcal{W}} a_{w,tsk}\; effort_{tsk}
    \quad\text{(assignments drive realized effort; CriteriaType=2)}
  \]

  \item \textbf{G3 \texttt{maximize\_story\_points}} (\textit{IsSum=True}, \textit{GoalType=max}, Entity=\textbf{UserStory}):
  \[
    F_{G3} \;=\; \sum_{us \in \mathcal{US}} x_{us}\; spoints_{us}
    \qquad\text{(maximize selected story points; CriteriaType=1)}
  \]

  \item \textbf{G4 \texttt{maximize\_team\_availability}} (\textit{IsSum=True}, \textit{GoalType=max}, Entity=\textbf{Worker}):
  \[
    F_{G4} \;=\; \sum_{w \in \mathcal{W}^{\text{active}}} avail_w
    \qquad\text{(favor higher available capacity; CriteriaType=1)}
  \]

  \item \textbf{G5 \texttt{minimize\_blocker\_severity}} (\textit{IsSum=True}, \textit{GoalType=min}, Entity=\textbf{Blocker}):
  \[
    F_{G5} \;=\; \sum_{tsk \in \mathcal{TSK}} \sum_{bl \in \mathcal{BL}(tsk)\cap \mathcal{BL}^{\text{open}}} sev_{bl}\; 
    \qquad\text{(reduce unresolved blocker risk; CriteriaType=2)}
  \]

  \item \textbf{G6 \texttt{maximize\_skill\_level\_alignment}} (\textit{IsSum=True}, \textit{GoalType=max}, Entity=\textbf{Skill}):
  \[
    F_{G6} \;=\; \sum_{w \in \mathcal{W}} \sum_{tsk \in \mathcal{TSK}} a_{w,tsk} 
      \left(\sum_{s \in \mathcal{S}(w)} level_s\right)
    \qquad\text{(prefer higher-skilled assignees; CriteriaType=1)}
  \]

  \item \textbf{G7 \texttt{minimize\_planning\_time}} (\textit{IsSum=True}, \textit{GoalType=min}, Entity=\textbf{SprintPlanning}):
  \[
    F_{G7} \;=\; \sum_{spp \in \mathcal{SPP}} \text{dur}^{\text{plan}}_{spp}
    \qquad\text{(reduce planning overhead; CriteriaType=1)}
  \]

  \item \textbf{G8 \texttt{minimize\_meeting\_overhead}} (\textit{IsSum=True}, \textit{GoalType=min}, Entity=\textbf{DailyScrum}):
  \[
    F_{G8} \;=\; \sum_{ds \in \mathcal{DS}} \text{dur}^{\text{daily}}_{ds}
    \qquad\text{(reduce daily meeting time; CriteriaType=1)}
  \]

  \item \textbf{G9 \texttt{maximize\_review\_engagement}} (\textit{IsSum=True}, \textit{GoalType=max}, Entity=\textbf{SprintReview}):
  \[
    F_{G9} \;=\; \sum_{sr \in \mathcal{SR}} att_{sr}
    \qquad\text{(encourage stakeholder attendance; CriteriaType=1)}
  \]

  \item \textbf{G10 \texttt{maximize\_team\_satisfaction}} (\textit{IsSum=True}, \textit{GoalType=max}, Entity=\textbf{SprintRetrospective}):
  \[
    F_{G10} \;=\; \sum_{sre \in \mathcal{SRE}} sat_{sre}
    \qquad\text{(improve team well-being; CriteriaType=1)}
  \]

  \item \textbf{G11 \texttt{minimize\_project\_budget\_use}} (\textit{IsSum=True}, \textit{GoalType=min}, Entity=\textbf{Project}):
  \[
    F_{G11} \;=\; \sum_{p \in \mathcal{P}} b^{\text{alloc}}_{p}
    \qquad\text{(limit allocated budget; CriteriaType=1)}
  \]
\end{itemize}

